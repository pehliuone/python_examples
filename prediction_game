import random
sayi=random.randint(1,100)
sefer=0
hak=int(input('kac tahmin yapmak istersiniz?: '))
while hak>0:
    hak-=1
    sefer+=1
    tahmin=int(input('0-100 arasÄ± sayi tahmin ediniz: '))

    if sayi==tahmin:
        print(f'tebrikler {sefer} seferde bildiniz.')
        break
    elif sayi>tahmin:
        print('yukarÄ±')
    else:
        print('asagi')

    if hak==0:
        print(f'hakkiniz bitti tutmaniz gereken sayi: {sayi}')    
